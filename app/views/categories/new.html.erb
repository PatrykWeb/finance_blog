<%= form_for(:category, :url => {:action => 'create'}) do |field| %>
  <table class="table table-striped">
    <tr>
      <th><%=field.label(:name) %></th>
      <th><%= field.text_field(:name) %></th>

      <th><%= field.label(:position) %></th>
      <th> <%= field.select(:position, 1..@counter) %></th>
      <th><%= field.label(:visible, "Czy jest widoczna?") %></th>
      <td><%= field.check_box(:visible) %></td>
    </tr>
  </table>

  <div><%= submit_tag("Wyslij") %></div>

<% end %>
